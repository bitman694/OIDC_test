{
  "group": "OAuth behaviors",
  "usage": {
    "return_type": [
      "C",
      "CI",
      "CT",
      "CIT"
    ]
  },
  "desc": "Trying to use authorization code twice should result in revoking previously issued access tokens",
  "reference": "https://tools.ietf.org/html/rfc6749#section-5.2",
  "note": "This test should result in the OpenID Provider returning an error message after the userinfo endpoint is accessed with a revoked access token.",
  "assert": {
    "verify-response": {
      "response_cls": [
        "ErrorResponse"
      ],
      "status": 2,
      "error": [
        "access_denied",
        "invalid_token"
      ]
    }
  },
  "sequence": [
    {
      "Webfinger": {
        "set_webfinger_resource": null
      }
    },
    {
      "Discovery": {
        "set_discovery_issuer": null
      }
    },
    "Registration",
    "Note",
    {
      "AsyncAuthn": {
        "set_response_where": null
      }
    },
    "AccessToken",
    {
      "AccessToken": {
        "set_expect_error": {
          "error": [
            "invalid_grant",
            "access_denied"
          ],
          "stop": false
        }
      }
    },
    {
      "UserInfo": {
        "set_expect_error": {
          "error": [
            "access_denied",
            "invalid_token"
          ]
        },
        "set_op_args": {
          "method": "GET",
          "authn_method": "bearer_header"
        }
      }
    }
  ]
}